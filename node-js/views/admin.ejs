<!doctype html><html><head><meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1"><link rel="stylesheet" href="/public/style.css"><title>Admin</title></head>
<body>
<div class="admin-page">
  <h2>Admin Panel</h2>
  <a href="/chat">← Back to chat</a>
  <section>
    <h3>Registration</h3>
    <button id="toggleReg">Toggle registration</button>
  </section>
  <section>
    <h3>Create Group</h3>
    <input id="groupName" placeholder="Group name"><input id="groupMembers" placeholder="Member IDs (1,2,3)"><button id="createGroup">Create</button>
  </section>
  <section>
    <h3>Users مدیریت</h3>
    <input id="newUser" placeholder="first,last,email,password,isAdmin(0/1)"><button id="addUser">Add User</button>
    <div id="usersTable"></div>
  </section>
  <section>
    <h3>Read chats</h3>
    <input id="conversationId" placeholder="Conversation ID"><button id="loadChats">Load</button><pre id="chatsView"></pre>
  </section>
  <section><h3>Danger Zone</h3><button id="clearDb">پاکسازی دیتابیس گفتگو</button></section>
</div>
<script src="/public/admin.js"></script>
</body></html>
